            "url": {
              "raw": "{{baseUrl}}/api/chat/all-history?limit=100&offset=0&order=DESC",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "all-history"],
              "query": [
                {
                  "key": "limit",
                  "value": "100"
                },
                {
                  "key": "offset",
                  "value": "0"
                },
                {
                  "key": "order",
                  "value": "DESC"
                }
              ]
            }
          }
        },
        {
          "name": "12. Request User Summary (Generate Summary)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
