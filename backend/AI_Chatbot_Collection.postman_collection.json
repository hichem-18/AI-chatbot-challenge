              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "message"]
            }
          }
        },
        {
          "name": "13. Get User Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/chat/summary?language=en",
              "host": ["{{baseUrl}}"],
              "path": ["api", "chat", "summary"],
              "query": [
                {
                  "key": "language",
                  "value": "en"
                }
              ]
            }
          }
        },
